<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.preference.PreferenceScreen
            app:iconSpaceReserved="false"
            app:key="pref_calendar"
            app:title="@string/calendar">

        <androidx.preference.SwitchPreference
                app:iconSpaceReserved="false"
                app:key="calendar_use_cn"
                app:title="使用大陆放送时间"
                app:summaryOn="使用大陆放送时间推测番组放送时间"
                app:summaryOff="使用日本放送时间推测番组放送时间"
                app:defaultValue="false"/>

        <androidx.preference.SwitchPreference
                app:iconSpaceReserved="false"
                app:key="calendar_use_30h"
                app:title="修仙模式"
                app:summary="开启后深夜0点-6点的动画将在前一天展示"
                app:defaultValue="false"/>

    </androidx.preference.PreferenceScreen>

    <androidx.preference.PreferenceScreen
            app:iconSpaceReserved="false"
            app:key="pref_miscellaneous"
            app:title="@string/pref_miscellaneous">

        <androidx.preference.ListPreference
                app:iconSpaceReserved="false"
                app:key="pref_dark_mode"
                app:title="夜间模式"
                app:entries="@array/pref_dark_mode"
                app:entryValues="@array/pref_dark_mode_values"
                app:defaultValue="-1"/>

        <androidx.preference.ListPreference
                app:iconSpaceReserved="false"
                app:key="image_quality"
                app:title="图片质量"
                app:entries="@array/pref_image_quality"
                app:entryValues="@array/pref_image_quality_values"
                app:defaultValue="c"/>

        <androidx.preference.ListPreference
                app:iconSpaceReserved="false"
                app:key="image_uploader"
                app:title="图床"
                app:entries="@array/pref_image_uploader"
                app:entryValues="@array/pref_image_uploader"
                app:defaultValue="p.sda1.dev"/>

        <androidx.preference.SwitchPreference
                app:iconSpaceReserved="false"
                app:key="webview_fix_scale"
                app:title="禁用页面缩放"
                app:summaryOn="重写页面viewport并禁用缩放"
                app:summaryOff="使用页面设置的viewport参数"
                app:defaultValue="true"/>

        <androidx.preference.SwitchPreference
                app:iconSpaceReserved="false"
                app:key="use_bbcode"
                app:title="使用bbcode"
                app:summary="回复时默认使用bbcode而不是富文本编辑器"
                app:defaultValue="false"/>

    </androidx.preference.PreferenceScreen>

    <androidx.preference.PreferenceScreen
            app:iconSpaceReserved="false"
            app:key="pref_plugin"
            app:title="插件">
        <androidx.preference.SwitchPreference
                app:iconSpaceReserved="false"
                app:key="plugins_enabled"
                app:title="加载插件"
                app:summary="重新打开后生效"
                app:defaultValue="true"/>

        <androidx.preference.PreferenceCategory
                app:key="pref_plugin_list"
                app:title="插件列表"
                app:iconSpaceReserved="false">
        </androidx.preference.PreferenceCategory>
    </androidx.preference.PreferenceScreen>

    <androidx.preference.PreferenceScreen
            app:iconSpaceReserved="false"
            app:key="pref_about"
            app:title="@string/about">

        <androidx.preference.Preference
                app:iconSpaceReserved="false"
                app:key="bangumi_topic"
                app:title="小组讨论"/>

        <androidx.preference.Preference
                app:iconSpaceReserved="false"
                app:key="feed_back"
                app:title="反馈"/>

        <androidx.preference.Preference
                app:iconSpaceReserved="false"
                app:key="github_page"
                app:title="Github地址"/>

        <androidx.preference.SwitchPreference
                app:iconSpaceReserved="false"
                app:key="check_update"
                app:title="启动时检查更新"
                app:summary="启动应用时检查更新"
                app:defaultValue="true"/>

        <androidx.preference.Preference
                app:iconSpaceReserved="false"
                app:key="check_update_now"
                app:title="检查更新"/>

    </androidx.preference.PreferenceScreen>
</androidx.preference.PreferenceScreen>